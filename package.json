{
    "name": "rememberall",
    "displayName": "Rememberall",
    "description": "A simple extension that provides a todo list",
    "icon": "resources/rememberall.png",
    "version": "0.0.1",
    "publisher": "Gruntfuggly",
    "repository": "https://github.com/Gruntfuggly/rememberall",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rememberall",
                    "title": "Rememberall",
                    "icon": "resources/rememberall1.svg"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "rememberall-explorer",
                    "name": "Rememberall",
                    "when": "rememberall-in-explorer"
                }
            ],
            "rememberall": [
                {
                    "id": "rememberall",
                    "name": "Rememberall"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "rememberall.authorize",
                    "when": "view =~ /rememberall/ && !rememberall-is-authorized",
                    "group": "navigation@1"
                },
                {
                    "command": "rememberall.create",
                    "when": "view =~ /rememberall/ && rememberall-is-authorized",
                    "group": "navigation@1"
                },
                {
                    "command": "rememberall.filter",
                    "when": "view =~ /rememberall/ && !rememberall-is-filtered && rememberall-tree-has-content && rememberall-is-authorized",
                    "group": "navigation@2"
                },
                {
                    "command": "rememberall.clearFilter",
                    "when": "view =~ /rememberall/ && rememberall-is-filtered && rememberall-tree-has-content && rememberall-is-authorized",
                    "group": "navigation@2"
                },
                {
                    "command": "rememberall.refresh",
                    "when": "view =~ /rememberall/ && rememberall-is-authorized",
                    "group": "navigation@3"
                },
                {
                    "command": "rememberall.expand",
                    "when": "view =~ /rememberall/ && rememberall-show-expand && rememberall-tree-has-content && rememberall-is-authorized",
                    "group": "navigation@4"
                },
                {
                    "command": "rememberall.collapse",
                    "when": "view =~ /rememberall/ && rememberall-show-collapse && rememberall-tree-has-content && rememberall-is-authorized",
                    "group": "navigation@4"
                }
            ]
        },
        "configuration": {
            "title": "Rememberall",
            "properties": {
                "rememberall.debug": {
                    "type": "boolean",
                    "markdownDescription": "Create a debug channel in the output view",
                    "default": "false"
                },
                "rememberall.showInExplorer": {
                    "type": "boolean",
                    "markdownDescription": "If true, show the view in the explorer. Set to false if you only want to use the dedicated view in the activity bar",
                    "default": true
                },
                "rememberall.syncEnabled": {
                    "type": "boolean",
                    "description": "Enable syncing via gist",
                    "default": true
                },
                "rememberall.syncToken": {
                    "type": "string",
                    "description": "A github token to allow sync via gist"
                },
                "rememberall.syncGistId": {
                    "type": "string",
                    "description": "A github gist ID used to store shared settings"
                }
            }
        },
        "commands": [
            {
                "command": "rememberall.authorize",
                "title": "Authorize",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/authorize.svg",
                    "light": "resources/icons/light/authorize.svg"
                }
            },
            {
                "command": "rememberall.resetCache",
                "title": "Reset Cache",
                "category": "Rememberall"
            },
            {
                "command": "rememberall.refresh",
                "title": "Refresh",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/refresh.svg",
                    "light": "resources/icons/light/refresh.svg"
                }
            },
            {
                "command": "rememberall.filter",
                "title": "Filter",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/filter.svg",
                    "light": "resources/icons/light/filter.svg"
                }
            },
            {
                "command": "rememberall.clearFilter",
                "title": "Clear",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/clear-filter.svg",
                    "light": "resources/icons/light/clear-filter.svg"
                }
            },
            {
                "command": "rememberall.expand",
                "title": "Expand all",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/expand.svg",
                    "light": "resources/icons/light/expand.svg"
                }
            },
            {
                "command": "rememberall.collapse",
                "title": "Collapse all",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/collapse.svg",
                    "light": "resources/icons/light/collapse.svg"
                }
            },
            {
                "command": "rememberall.create",
                "title": "Create New Entry",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/add.svg",
                    "light": "resources/icons/light/add.svg"
                }
            },
            {
                "command": "rememberall.edit",
                "title": "Change",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/edit.svg",
                    "light": "resources/icons/light/edit.svg"
                }
            },
            {
                "command": "rememberall.remove",
                "title": "Remove",
                "category": "Rememberall",
                "icon": {
                    "dark": "resources/icons/dark/trash.svg",
                    "light": "resources/icons/light/trash.svg"
                }
            }
        ]
    },
    "devDependencies": {
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "gistore": "^0.1.1"
    }
}